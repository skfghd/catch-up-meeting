rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload files
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Organization logos
    match /organizations/{orgId}/logo {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // User profile images
    match /users/{userId}/profile {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}